<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%-5level{DEBUG=blue, INFO=green, WARN=yellow, ERROR=red, TRACE=magenta}) %cyan(%d{HH:mm:ss.SSS}) [%thread] %boldGreen(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
